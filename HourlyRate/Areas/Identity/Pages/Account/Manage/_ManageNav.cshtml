@using HourlyRate.Infrastructure.Data.Models.Account
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using HourlyRate.Areas.Identity.Pages.Account.Manage
@inject SignInManager<UserIdentityExt> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-tabs nav-tabs-v2 ps-4 pe-4">
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="./Index">Profile</a></li>
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.FlNavClass(ViewContext)" id="first-last-name" asp-page="./FirstLastName">FirstLastName</a></li>
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.CompanyClass(ViewContext)" id="company-info" asp-page="./CompanyInfo">CompanyInfo</a></li>

    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="./Email">Email</a></li>
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="./ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item me-3"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.TwoFactorAuthenticationNavClass(ViewContext)" id="two-factor" asp-page="./TwoFactorAuthentication">Two-factor authentication</a></li>
    <li class="nav-item me-3"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="./PersonalData">Personal data</a></li>
</ul>
