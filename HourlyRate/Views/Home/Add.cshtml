@model EmployeeViewModel
@{
    ViewData["Title"] = "Add";
    //ViewData["AppClass"] = "app-full-height app-without-header app-full-width";
    //ViewData["AppWithoutHeader"] = true;
    //ViewData["AppWithoutSidebar"] = true;
    //ViewData["AppWithoutContainer"] = true;
}

<!-- BEGIN Add Employee -->
<div class="register">
    <!-- BEGIN add-content -->
    <div class="register-content">
        <form method="post">
            <h1 class="text-center">Add Employee</h1>
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="mb-3">
                <label asp-for="FirstName" class="form-label"></label>
                <input asp-for="FirstName" class="form-control form-control-lg fs-15px" placeholder="e.g JohnS" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LastName" class="form-label"></label>
                <input asp-for="LastName" class="form-control form-control-lg fs-15px" placeholder="e.g Smith" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="JobTitle" class="form-label"></label>
                <input asp-for="JobTitle" class="form-control form-control-lg fs-15px" placeholder="e.g Manager" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Salary" class="form-label"></label>
                <input asp-for="Salary" class="form-control form-control-lg fs-15px" placeholder="e.g 1000" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" class="form-control">
                    @foreach (var department in Model.EmployeeDepartments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
    <!-- END Add-content -->
</div>
<!-- END Add -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
