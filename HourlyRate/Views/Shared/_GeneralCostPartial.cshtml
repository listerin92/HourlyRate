@model CostViewModel

<!-- BEGIN Add Cost -->
<div class="register">
    <!-- BEGIN add-content -->
    <div class="register-content">
        <form method="post">
            <input type="hidden" asp-for="@Model.Id" />
            <h1 class="text-center">Add Cost</h1>
            @*<div asp-validation-summary="All" class="text-danger"></div>*@
            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input asp-for="Description" class="form-control form-control-lg fs-15px" placeholder="e.g Occupation" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Amount" class="form-label"></label>
                <input asp-for="Amount" class="form-control form-control-lg fs-15px" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
           <div class="form-group">
                <label asp-for="CostCategoryId"></label>
                <select asp-for="CostCategoryId" class="form-control">
                    @foreach (var cost in Model.GeneralCostType)
                    {
                        <option value="@cost.Id">@cost.Name</option>
                    }
                </select>
                <span asp-validation-for="CostCategoryId" class="text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
    <!-- END Add-content -->
</div>
<!-- END Add -->